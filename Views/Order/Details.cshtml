@model InventoryManagementSystem.Models.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order Details</h1>

<div>
    <h4>Order ID: @Model.OrderId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product ID:</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>
        <dt class="col-sm-2">Quantity:</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Order Date:</dt>
        <dd class="col-sm-10">@Model.OrderDate</dd>
        <dt class="col-sm-2">Status:</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>

