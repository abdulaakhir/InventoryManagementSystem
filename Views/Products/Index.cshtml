@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Product List";
    Layout = "_Layout";
}

<h1>Product List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Product</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Product Actions">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@product.ProductId">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

